<h1>配送先登録/一覧</h1>
<%= form_with model: @address, url: public_addresses_path, local:true do |f| %>
  <div class="field">
    <%= f.label :郵便番号 %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>
  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>
  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<% @addresses.each do |address| %>
<p>郵便番号：<%= address.postal_code %></p>
<p>住所：<%= address.address %></p>
<p>氏名：<%= address.name %></p>
<%= link_to "編集する", edit_public_address_path(address) %>
<%= link_to "削除", public_address_path(address), method: :delete %>
<% end %>