

<div>
  <p><%= attachment_image_tag @item, :image, :fill, 300, 300, format: 'jpeg' %></p>
  <h1><%= @item.name %></h1>
  <p><%= @item.introduction %></p>
  <p>￥<%= (@item.price * 1.1).floor %>（税込）</p>
<%= form_with model: @cart_item, url: public_cart_items_path, method: :post, local:true do |f| %>
     <%= f.hidden_field :item_id, value: @item.id %>
     <%= f.select :amount, *[1..9] %>
     <%= f.submit 'カートに入れる' %>
<% end %>
</div>
