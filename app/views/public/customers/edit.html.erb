<h1>会員情報編集</h1>
<%= form_with model: @customer, url: public_customer_path, local:true do |f| %>
<%#= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%#= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :氏名 %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %><br />
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %><br />
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>

　 <div class="field">
    <%= f.label :メルアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>


  <div class="actions">
    <%= f.submit "編集内容を保存" %>
  </div>
<% end %>
