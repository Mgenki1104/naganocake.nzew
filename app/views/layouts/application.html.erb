<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
     <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
           <a class="navbar-brand p-3" href="/"></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <% if customer_signed_in? %>
            <li class="nav-item">
              <%= link_to "マイページ", public_customer_path(current_customer) %>            </li>
            <li class="nav-item">
              <%= link_to '商品一覧',public_items_path %>
            </li>
            <li class="nav-item">
              <%= link_to 'カート'%>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
              <%#= link_to 'ログアウト' %>
              <%#= link_to "About", new_user_registration_path, class: 'nav-link text-dark' %>
            </li>

          <% else %>
            <li class="nav-item">
              <%= link_to "About", public_homes_about_path %>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧" , public_items_path %>
            </li>
            <li class="nav-item">
              <%= link_to "新規登録", new_customer_registration_path %>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン", new_customer_session_path %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <%= yield %>
  </body>
  <footer class="bg-dark text-white pt-5 pb-4">
      <div class="container">
        <div class="row no-gutters">
　　　</div>
　　　</div>
　</footer>
</html>
