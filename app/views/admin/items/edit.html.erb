<h1>商品編集</h1>
<%= form_with model: @item, url: admin_item_path, local:true do |f| %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :introduction %>
  <h4>ジャンル</h4>
　<%= f.collection_select(:genre_id, @genres, :id, :name) %>
  <h4>税抜き価格</h4>
  <%= f.text_field :price %>円
  <h4>販売ステータス</h4>
<%#= form_with(model: @items, local: true) do |form| %>
