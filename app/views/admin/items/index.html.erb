<% @items.each do |item| %>
<div>
  <h4>商品ID：<%= item.id %></h4>
  <p>商品名：<%= item.name %></p>
  <p>税抜価格：<%= item.price %></p>
  <p>ジャンル：<%= item.genre.name %></p>
  <p>ステータス：
     <% if item.is_active == true %>
       <%= "販売中" %>
     <% else %>
       <%= "販売停止中" %>
     <% end %>
     </p>
</div>
<% end %>

