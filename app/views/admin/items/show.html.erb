<%# @items.each do |item| %>
<div>
  <h4>商品詳細</h4>
  <p><%= attachment_image_tag @item, :image %></p>
  <p>商品名：<%= @item.name %></p>
  <p>税抜価格：<%= @item.price %></p>
  <p>ジャンル：<%= @item.genre.name %></p>
  <p>ステータス：<% if @item.is_active == true %>
       <%= "販売中" %>
     <% else %>
       <%= "販売停止中" %>
     <% end %></p>
</div>
<%# end %>
<%= link_to "編集する", edit_admin_item_path(@item) %>